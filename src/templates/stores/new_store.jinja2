{% extends "base.jinja2" %}
{% block content %}

    <div class="'page-header">
        <h2>Új webáruház hozzáadása</h2>
    </div>
    <br>
    <div class="form-size">
        <form method='post'>
            <div class="form-group">
                <label for="name">Webáruház neve</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Név">
            </div>
            <div class="form-group">
                <label for="url_prefix">URL prefix a webáruházhoz</label>
                <input type="text" class="form-control" id="url_prefix" name="url_prefix" placeholder="http://..."
                       aria-describedby="StoreURLPrefixHelp">
                <p id="StoreURLPrefixHelp" class="form-text text-muted">A webáruház alap (base) URL-je, specifikus
                    hivatkozás nélkül.</p>
            </div>
            <div class="form-group">
                <label for="tag_name">Webáruház html tag-je</label>
                <input type="text" class="form-control" id="tag_name" name="tag_name" placeholder="pl. span"
                       value="pl. span"
                       aria-describedby="StoreTagName">
                <p id="StoreTagName" class="form-text text-muted">A tag neve a html element-nél, általában
                    <code>span</code>.</p>
            </div>
            <div class="form-group">
                <label for="query">Webáruház query-je</label>
                <input type="text" class="form-control" id="query" name="query" placeholder='pl. {"id": "price-now"}'
                       value='pl. {"id": "price-now"}'
                       aria-describedby="StoreQuery">
                <p id="StoreQuery" class="form-text text-muted">A lekéréshez szükséges parancssor (query).</p>
            </div>
            <button type="submit" class="btn btn-success">Hozzáadás</button>
        </form>
        <br><br>
    </div>

{% endblock %}