{% extends "base.jinja2" %}
{% block content %}

    <div class="page-header">
        <h2>Webáruházak
            <small>&nbsptámogatott webshopok</small>
        </h2>
    </div>
    <br>
    <div class="list-group">
        {% for store in stores %}
            <a href="{{ url_for('stores.store_page', store_id=store._id) }}" class="list-group-item">
                <h4 class="" list-group-item-title><strong>{{ store.name }}</strong></h4>
                <p class="" list-group-item-text>Prefix:
                    <strong>{{ store.url_prefix }}</strong></p>
            </a>
            <br>
        {% endfor %}
    </div>
    {% if session['email'] in config.ADMINS %}
        <br>
        <a class="btn btn-success" href="{{ url_for('stores.create_store') }}"><i class="fa fa-plus"></i>&nbspÚj
            webáruház hozzáadása</a>
        <br><br>
    {% endif %}
{% endblock %}