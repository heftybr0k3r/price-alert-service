{% extends "base.jinja2" %}
{% block content %}

    <div class="page-header">
        <h2>Értesítés szerkesztése</h2>
        <br>
    </div>
    <div class="form-size">
        <form method="POST">
            <div class="form-group">
                <label for="name">Értesítés / Termék</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Név" disabled>
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" , placeholder="http://www.." disabled>
            </div>
            <div class="form-group">
                <label for="price_limit">Árlimit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" , placeholder="pl. 45.000"
                       value="{{ alert.price_limit }}" , aria-describedby="priceLimit">
                <p id="PriceLimit" class="form-text text-muted">Itt adhatod meg, milyen ár esetén küldjünk értesítést
                    neked.</p>
            </div>
            <button type="submit" class="btn btn-warning">Szerkesztés</button>
        </form>
    </div>

{% endblock %}