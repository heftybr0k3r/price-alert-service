{% extends "base.jinja2" %}
{% block content %}

    <div class="page-header">
        <h1>Új értesítés készítése</h1>
    </div>
    <div class="form-size">
        <form method="POST">
            <div class="form-group">
                <label for="name">Értesítés / Termék</label>
                <input type="text" class="form-control" id="name" name="name" , placeholder="Név">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" , placeholder="http://www..">
            </div>
            <div class="form-group">
                <label for="price_limit">Árlimit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" , placeholder="pl. 45.000"
                       aria-describedby="priceLimit">
                <p id="PriceLimit" class="form-text text-muted">Itt adhatod meg, milyen ár esetén küldjünk értesítést
                    neked.</p>
            </div>
            <button type="submit" class="btn btn-primary">Hozzáadás</button>
        </form>
    </div>

{% endblock %}