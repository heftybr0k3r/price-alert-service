{% extends "base.jinja2" %}
{% block content %}
    <div class="form-size">
        <form action="{{ url_for("users.register_user")}}" method="post">
            <div class="form-group">
                <label for="email"><i class="fa fa-envelope"></i>&nbspEmail-cím:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="pwd"><i class="fa fa-lock"></i>&nbspJelszó:</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-database"></i>&nbspRegisztráció</button>
        </form>
    </div>
{% endblock %}